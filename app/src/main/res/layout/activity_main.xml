<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineD"
        app:layout_constraintStart_toStartOf="@+id/guidelineI"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonC"
        style="@style/botonPeq"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="C"
        android:onClick="btnC"
        app:layout_constraintStart_toStartOf="@+id/guidelineI"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonDel"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:text="Del"
        android:onClick="btnDel"
        app:layout_constraintEnd_toStartOf="@+id/buttonDiv"
        app:layout_constraintStart_toEndOf="@+id/buttonC"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonDiv"
        style="@style/botonPeq"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="/"
        android:onClick="btnDividir"
        app:layout_constraintEnd_toStartOf="@+id/guidelineD"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button7"
        style="@style/botonPeq"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="7"
        android:onClick="btnSiete"
        app:layout_constraintStart_toStartOf="@+id/guidelineI"
        app:layout_constraintTop_toBottomOf="@+id/buttonC" />

    <Button
        android:id="@+id/button8"
        style="@style/botonPeq"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="8"
        android:onClick="btnOcho"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/buttonDel" />

    <Button
        android:id="@+id/button9"
        style="@style/botonPeq"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="9"
        android:onClick="btnNueve"
        app:layout_constraintEnd_toStartOf="@+id/buttonMul"
        app:layout_constraintTop_toBottomOf="@+id/buttonDel" />

    <Button
        android:id="@+id/buttonMul"
        style="@style/botonPeq"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="*"
        android:onClick="btnMultiplicar"
        app:layout_constraintEnd_toStartOf="@+id/guidelineD"
        app:layout_constraintTop_toBottomOf="@+id/buttonDiv" />

    <Button
        android:id="@+id/button4"
        style="@style/botonPeq"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="4"
        android:onClick="btnCuatro"
        app:layout_constraintStart_toStartOf="@+id/guidelineI"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        style="@style/botonPeq"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="5"
        android:onClick="btnCinco"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button6"
        style="@style/botonPeq"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="6"
        android:onClick="btnSeis"
        app:layout_constraintEnd_toStartOf="@+id/buttonMas"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/buttonMas"
        style="@style/botonPeq"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="+"
        android:onClick="btnSumar"
        app:layout_constraintEnd_toStartOf="@+id/guidelineD"
        app:layout_constraintTop_toBottomOf="@+id/buttonMul" />

    <Button
        android:id="@+id/button1"
        style="@style/botonPeq"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="1"
        android:onClick="btnUno"
        app:layout_constraintStart_toStartOf="@+id/guidelineI"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        style="@style/botonPeq"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="2"
        android:onClick="btnDos"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button3"
        style="@style/botonPeq"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="3"
        android:onClick="btnTres"
        app:layout_constraintEnd_toStartOf="@+id/buttonMen"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/buttonMen"
        style="@style/botonPeq"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="-"
        android:onClick="btnRestar"
        app:layout_constraintEnd_toStartOf="@+id/guidelineD"
        app:layout_constraintTop_toBottomOf="@+id/buttonMas" />

    <Button
        android:id="@+id/button0"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:onClick="btnCero"
        app:layout_constraintStart_toStartOf="@+id/guidelineI"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/buttonPun"
        style="@style/botonPeq"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="."
        android:onClick="btnPunto"
        app:layout_constraintEnd_toStartOf="@+id/buttonIgu"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonIgu"
        style="@style/botonPeq"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="="
        android:onClick="btnIgual"
        app:layout_constraintEnd_toStartOf="@+id/guidelineD"
        app:layout_constraintTop_toBottomOf="@+id/buttonMen" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />

    <Switch
        android:id="@+id/switchTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Mode"
        android:onClick="changeTheme"
        app:layout_constraintStart_toStartOf="@id/guidelineI"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>